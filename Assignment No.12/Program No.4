import java.util.Scanner;

public class A12 {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        try {
            System.out.print("Enter the number of elements in the array: ");
            int size = sc.nextInt();
            int[] numbers = new int[size];
            System.out.println("Enter the elements: ");
            for (int i = 0; i < size; i++) {
                numbers[i] = sc.nextInt();
            }
            System.out.print("Enter the index of the element to access: ");
            int index = sc.nextInt();
            System.out.println("Element at position " + index + " is: " + numbers[index]);

        } 
        catch (ArrayIndexOutOfBoundsException e) {
            System.out.println("Error: Invalid index. Please enter a valid position within the array range.");
        } 
        catch (Exception e) {
            System.out.println("Error: Invalid input.");
        }
    }
}
