public class A5 {
    String title;
    String author;
    double price;
    public A5(String title) {
        this.title = title;
        this.author = null;
        this.price = 0.0;
    }
    public A5(String title, String author) {
        this.title = title;
        this.author = author;
        this.price = 0.0;
    }
    public A5(String title, String author, double price) {
        this.title = title;
        this.author = author;
        this.price = price;
    }
    public void displayDetails() {
        System.out.println("Title: " + (title != null ? title : "null"));
        System.out.println("Author: " + (author != null ? author : "null"));
        System.out.println("Price: $" + price);
    }

    public static void main(String[] args) {
        A5 book1 = new A5("Java Basics");
        A5 book2 = new A5("Python Programming", "Alice Smith");
        A5 book3 = new A5("C++ Mastery", "Bob Johnson", 29.99);

        book1.displayDetails();
        book2.displayDetails();
        book3.displayDetails();
    }
}
