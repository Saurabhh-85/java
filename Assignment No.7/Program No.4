class Customer {
    int customerId;
    String customerName;
    Customer(int id, String name) {
        this.customerId = id;
        this.customerName = name;
    }
    void displayCustomer() {
        System.out.println("Customer ID: " + customerId);
        System.out.println("Customer Name: " + customerName);
    }
}
class Billing extends Customer {
    double billAmount;
    Billing(int id, String name, double amount) {
        super(id, name); 
        this.billAmount = amount;
    }
    void calculateDiscount() {
        double discount = billAmount * 0.1;
        double total = billAmount - discount;

        super.displayCustomer();
        System.out.println("Bill Amount: " + billAmount);
        System.out.println("Discount: " + discount);
        System.out.println("Total Amount to Pay: " + total);
    }
}
public class CustomerBillingSystem {
    public static void main(String[] args) {
        Billing bill = new Billing(1001, "Rahul Sharma", 5000.0);
        bill.calculateDiscount();
    }
}
