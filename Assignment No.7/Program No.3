class UniversityMember {
    String name;
    int id;
}
class Student extends UniversityMember {
    String course;
    int year;
}
class Professor extends UniversityMember {
    String subject;
    double salary;
}
class Staff extends UniversityMember {
    String department;
    String position;
}
public class A6 {
    public static void main(String[] args) {
        Student student = new Student();
        student.name = "Alice";
        student.id = 101;
        student.course = "Computer Science";
        student.year = 2;

        Professor professor = new Professor();
        professor.name = "Dr. Smith";
        professor.id = 201;
        professor.subject = "Data Structures";
        professor.salary = 75000;

        Staff staff = new Staff();
        staff.name = "Mr. Brown";
        staff.id = 301;
        staff.department = "Administration";
        staff.position = "Clerk";

        System.out.println("Student Details:");
        System.out.println("Name: " + student.name);
        System.out.println("ID: " + student.id);
        System.out.println("Course: " + student.course);
        System.out.println("Year: " + student.year);

        System.out.println("Professor Details:");
        System.out.println("Name: " + professor.name);
        System.out.println("ID: " + professor.id);
        System.out.println("Subject: " + professor.subject);
        System.out.println("Salary: " + professor.salary);

        System.out.println("Staff Details:");
        System.out.println("Name: " + staff.name);
        System.out.println("ID: " + staff.id);
        System.out.println("Department: " + staff.department);
        System.out.println("Position: " + staff.position);
    }
}
